mixin date-dropdown(date, masked)
    div(class="date-dropdown")
        div(class="label label_size_hover")
            span(class="type__font_H3") date dropdown
        div(class="input input_border_default")
            if masked
                span(class="input_placeholder_default")=date
                .arrow
                     div(class="arrow__icon arrow__icon_color_gray") keyboard_arrow_down
            else
                span(class="type__font_Body")=date
                .arrow
                    div(class="arrow__icon arrow__icon_color_gray") keyboard_arrow_down
.inputs__date-dropdown
    +date-dropdown('ДД.ММ.ГГГГ', true)
    +date-dropdown('19.08.2019', false)
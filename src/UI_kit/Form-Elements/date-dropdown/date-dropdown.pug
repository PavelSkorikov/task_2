mixin date-dropdown(date, masked)
    .date-dropdown
        div(class="label label_size_hover")
            span.type__font_H3 date dropdown
        div(class="input input_border_default")
            if masked
                span.input_placeholder_default=date
                .arrow keyboard_arrow_down
            else
                span.type__font_Body=date
                .arrow keyboard_arrow_down
.inputs__date-dropdown
    +date-dropdown('ДД.ММ.ГГГГ', true)
    +date-dropdown('19.08.2019', false)